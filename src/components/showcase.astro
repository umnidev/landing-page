---
import ContentSection from "~/components/content-section.astro";
import ShowcaseCard from "~/components/showcase-card.astro";
import { getShowcase } from "~/data/showcase";

const sites = await getShowcase();
---

<ContentSection title="People" id="people">
  <Fragment slot="lead">
    Access our pool of <span class="text-primary">top talent</span>, skilled in
    a variety of digital domains, <span class="text-primary">ready</span>
    to help you <span class="text-primary">tackle</span> your most
    <span class="text-primary">challenging</span> consulting needs.
  </Fragment>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {sites.map((site) => <ShowcaseCard site={site} />)}
    </div>
    <p class="text-right text-sm">
      <a class="text-primary" href="https://astro.build/showcase/">
        ...and more &rarr;
      </a>
    </p>
  </div>
</ContentSection>
